{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "GDP 2022",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/znxuan/3179hw2/refs/heads/main/ne_110m.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/znxuan/3179hw2/refs/heads/main/gdp_2022.csv"
        },
        "key": "Country Name",
        "fields": ["GDP 2022"]
      }
    },
    {
      "calculate": "datum['GDP 2022'] == 0 || datum['GDP 2022'] == null ?  0.0001: datum['GDP 2022']",
      "as": "adjusted_gdp"
    },
    {
            "filter": "datum['adjusted_gdp'] > 0"  
    }, {"calculate": "datum['adjusted_gdp']/ 1000", "as": "GDP per country (billion)"}
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "GDP per country (billion)",
      "type": "quantitative",
      "scale": {"type": "linear"}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "GDP 2022", "type": "quantitative", "title": "GDP per country (million)"},
      {"field": "GDP per country (billion)", "type": "quantitative", "title": "GDP per country (billion)"}
    ]
  }
}
